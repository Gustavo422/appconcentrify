<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .card {
            @apply bg-white rounded-xl shadow-lg border border-gray-100 mb-8;
        }
        .card-header {
            @apply px-6 pt-6 pb-2;
        }
        .card-body {
            @apply px-6 pb-6;
        }
        .badge {
            @apply inline-flex items-center px-2 py-1 rounded-full text-xs font-medium;
        }
        .badge-primary {
            @apply bg-blue-100 text-blue-800;
        }
        .badge-success {
            @apply bg-green-100 text-green-800;
        }
        .badge-gray {
            @apply bg-gray-200 text-gray-800;
        }
    </style>
</head>
<body class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
    <!-- Header Section -->
    <div class="bg-gradient-to-r from-blue-600 to-purple-600 text-white py-8 mb-8">
        <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-between">
            <h1 class="text-3xl font-bold">
                <i class="fas fa-users mr-3"></i>
                Gerenciar Usu치rios
            </h1>
            <a href="/admin/users/new" class="bg-white bg-opacity-20 hover:bg-opacity-30 px-6 py-3 rounded-lg transition-all duration-200 flex items-center">
                <i class="fas fa-user-plus mr-2"></i>
                Novo Usu치rio
            </a>
        </div>
    </div>

    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="card">
            <div class="card-header">
                <h3 class="text-lg font-semibold text-gray-900">
                    <i class="fas fa-users mr-2 text-blue-600"></i>
                    Usu치rios do Sistema
                </h3>
            </div>
            <div class="card-body">
                <div class="space-y-4">
                    <% if (users && users.length > 0) { %>
                        <% users.forEach(user => { %>
                            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                                <div class="flex items-center">
                                    <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center mr-3">
                                        <i class="fas fa-user text-blue-600"></i>
                                    </div>
                                    <div>
                                        <p class="font-medium text-gray-900"><%= user.email %></p>
                                        <p class="text-sm text-gray-600">
                                            Criado em <%= new Date(user.created_at).toLocaleDateString('pt-BR') %>
                                        </p>
                                    </div>
                                </div>
                                <div class="flex items-center space-x-2">
                                    <% if (user.is_admin) { %>
                                        <span class="badge badge-primary">Admin</span>
                                    <% } %>
                                    <% if (user.last_login) { %>
                                        <span class="badge badge-success">Ativo</span>
                                    <% } %>
                                    <% if (!user.last_login) { %>
                                        <span class="badge badge-gray">Novo</span>
                                    <% } %>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <div class="text-center text-gray-500 py-8">
                            Nenhum usu치rio encontrado.
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</body>
</html> 