<div class="container mx-auto px-4 py-8">
  <!-- Cabeçalho -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2">
          Editar Macete
        </h1>
        <p class="text-gray-600">
          Edite as informações do macete
        </p>
      </div>
      <a 
        href="/macetes/admin" 
        class="px-4 py-2 bg-gray-600 text-white font-medium rounded-md hover:bg-gray-700 transition-colors duration-200"
      >
        <i class="fas fa-arrow-left mr-2"></i>
        Voltar
      </a>
    </div>
  </div>

  <!-- Formulário -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <form action="/macetes/<%= macete.id %>/edit?_method=PUT" method="POST">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Título -->
        <div class="md:col-span-2">
          <label for="titulo" class="block text-sm font-medium text-gray-700 mb-2">
            Título *
          </label>
          <input 
            type="text" 
            id="titulo" 
            name="titulo" 
            required
            value="<%= macete.titulo %>"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder="Ex: Técnica Pomodoro"
          >
        </div>

        <!-- Descrição -->
        <div class="md:col-span-2">
          <label for="descricao" class="block text-sm font-medium text-gray-700 mb-2">
            Descrição
          </label>
          <textarea 
            id="descricao" 
            name="descricao" 
            rows="3"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder="Breve descrição do macete"
          ><%= macete.descricao || '' %></textarea>
        </div>

        <!-- Categoria -->
        <div>
          <label for="categoria" class="block text-sm font-medium text-gray-700 mb-2">
            Categoria *
          </label>
          <select 
            id="categoria" 
            name="categoria" 
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            <option value="">Selecione uma categoria</option>
            <% categorias.forEach(function(categoria) { %>
              <option value="<%= categoria %>" <%= macete.categoria === categoria ? 'selected' : '' %>>
                <%= categoria %>
              </option>
            <% }); %>
          </select>
        </div>

        <!-- Nível -->
        <div>
          <label for="nivel" class="block text-sm font-medium text-gray-700 mb-2">
            Nível *
          </label>
          <select 
            id="nivel" 
            name="nivel" 
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            <option value="">Selecione um nível</option>
            <% niveis.forEach(function(nivel) { %>
              <option value="<%= nivel %>" <%= macete.nivel === nivel ? 'selected' : '' %>>
                <%= nivel %>
              </option>
            <% }); %>
          </select>
        </div>

        <!-- Conteúdo -->
        <div class="md:col-span-2">
          <label for="conteudo" class="block text-sm font-medium text-gray-700 mb-2">
            Conteúdo *
          </label>
          <textarea 
            id="conteudo" 
            name="conteudo" 
            required
            rows="6"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder="Explique detalhadamente o macete..."
          ><%= macete.conteudo %></textarea>
        </div>

        <!-- Exemplos -->
        <div class="md:col-span-2">
          <label for="exemplos" class="block text-sm font-medium text-gray-700 mb-2">
            Exemplos
          </label>
          <textarea 
            id="exemplos" 
            name="exemplos" 
            rows="4"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder="Forneça exemplos práticos..."
          ><%= macete.exemplos || '' %></textarea>
        </div>

        <!-- Dicas -->
        <div class="md:col-span-2">
          <label for="dicas" class="block text-sm font-medium text-gray-700 mb-2">
            Dicas Adicionais
          </label>
          <textarea 
            id="dicas" 
            name="dicas" 
            rows="3"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder="Dicas extras para aplicar o macete..."
          ><%= macete.dicas || '' %></textarea>
        </div>

        <!-- Status -->
        <div class="md:col-span-2">
          <div class="bg-gray-50 rounded-lg p-4">
            <h3 class="text-sm font-medium text-gray-700 mb-2">Status Atual</h3>
            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full 
              <%= macete.status === 'ativo' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
              <%= macete.status === 'ativo' ? 'Ativo' : 'Inativo' %>
            </span>
            <p class="text-sm text-gray-600 mt-2">
              Para alterar o status, use o botão na lista de macetes.
            </p>
          </div>
        </div>
      </div>

      <!-- Botões -->
      <div class="flex justify-end space-x-4 mt-8">
        <a 
          href="/macetes/admin" 
          class="px-6 py-2 bg-gray-300 text-gray-700 font-medium rounded-md hover:bg-gray-400 transition-colors duration-200"
        >
          Cancelar
        </a>
        <button 
          type="submit" 
          class="px-6 py-2 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 transition-colors duration-200"
        >
          <i class="fas fa-save mr-2"></i>
          Salvar Alterações
        </button>
      </div>
    </form>
  </div>
</div> 