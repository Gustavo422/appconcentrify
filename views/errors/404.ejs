<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <!-- Ícone de erro -->
      <div class="mx-auto flex items-center justify-center h-24 w-24 rounded-full bg-yellow-100 mb-6">
        <i class="fas fa-search text-yellow-600 text-4xl"></i>
      </div>
      
      <!-- Título -->
      <h1 class="text-4xl font-bold text-gray-900 mb-4">
        Página não encontrada
      </h1>
      
      <!-- Mensagem -->
      <p class="text-lg text-gray-600 mb-8">
        <%= message %>
      </p>
      
      <!-- URL que não foi encontrada -->
      <% if (typeof originalUrl !== 'undefined') { %>
        <div class="bg-gray-100 rounded-lg p-4 mb-8">
          <p class="text-sm text-gray-600">
            <strong>URL:</strong> 
            <span class="font-mono text-gray-800"><%= originalUrl %></span>
          </p>
        </div>
      <% } %>
      
      <!-- Botões de ação -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/products" 
          class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200"
        >
          <i class="fas fa-home mr-2"></i>
          Voltar ao Início
        </a>
        
        <button 
          onclick="window.history.back()" 
          class="inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200"
        >
          <i class="fas fa-arrow-left mr-2"></i>
          Voltar
        </button>
      </div>
      
      <!-- Links úteis -->
      <div class="mt-8">
        <h3 class="text-sm font-medium text-gray-900 mb-4">Páginas úteis:</h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
          <a 
            href="/products" 
            class="text-blue-600 hover:text-blue-500 text-sm flex items-center justify-center"
          >
            <i class="fas fa-box mr-2"></i>
            Produtos
          </a>
          <a 
            href="/simulados" 
            class="text-blue-600 hover:text-blue-500 text-sm flex items-center justify-center"
          >
            <i class="fas fa-clipboard-list mr-2"></i>
            Simulados
          </a>
          <a 
            href="/macetes" 
            class="text-blue-600 hover:text-blue-500 text-sm flex items-center justify-center"
          >
            <i class="fas fa-lightbulb mr-2"></i>
            Macetes
          </a>
          <a 
            href="/admin/dashboard" 
            class="text-blue-600 hover:text-blue-500 text-sm flex items-center justify-center"
          >
            <i class="fas fa-tachometer-alt mr-2"></i>
            Dashboard
          </a>
        </div>
      </div>
    </div>
  </div>
</div> 